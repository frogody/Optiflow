# Test environment variables
NODE_ENV=test

# Mock credentials for testing
NEXT_PUBLIC_PIPEDREAM_CLIENT_ID=test_pipedream_client_id
PIPEDREAM_CLIENT_SECRET=test_pipedream_client_secret
PIPEDREAM_PROJECT_ID=test_pipedream_project_id
PIPEDREAM_PROJECT_ENVIRONMENT=test
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_PIPEDREAM_REDIRECT_URI=http://localhost:3000/api/pipedream/callback

# Database URL - use a test database
DATABASE_URL="file:./test.db"

# Auth secret
AUTH_SECRET=test_secret_key_for_testing_only

# Vercel deployment URL for E2E tests
TEST_BASE_URL=http://localhost:3000

# OAuth testing configuration
# Set to true to enable real OAuth flows (manual testing)
ENABLE_REAL_OAUTH=false
# Mock OAuth provider URL for automated testing
MOCK_OAUTH_PROVIDER_URL=http://localhost:3000/mock-oauth
# Flag to use mock server for OAuth flows
USE_MOCK_OAUTH_SERVER=true
# Test user credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test_password_123

